<script>
document.addEventListener("DOMContentLoaded", function () {
  const newsFilePath = `/news/info_list_update.json`;

  // 指定したファイルを取得(news)
  fetch(newsFilePath)
		.then(response => {
			if (!response.ok) {
					throw new Error(`HTTPエラー! ステータス: ${response.status}`);
			}
			return response.json(); // JSONデータを返す
		})
		.then(data => {
			// テーブルのtbody要素を取得
			const newsTableBody = document.querySelector("#news tbody");

			// JSONデータをループしてテーブルに行を追加
			data.forEach(item => {
				const row = document.createElement("tr");

				// 各カラムを生成してデータを挿入
				const dateCell = document.createElement("td");
				dateCell.textContent = item.date;

				const contentCell = document.createElement("td");
				const linkElement = document.createElement("a");
				linkElement.textContent = item.content; // リンクテキストに概要を使用
				linkElement.href = item.link; // `link`を<a>のhrefに設定
				linkElement.target = "_blank"; // 新しいタブで開くよう設定
				contentCell.appendChild(linkElement);

				// 行にカラムを追加
				row.appendChild(dateCell);
				row.appendChild(contentCell);

				// 行をテーブルに追加
				newsTableBody.appendChild(row);
			});
		})
		.catch(error => {
			console.error("ニュースデータの読み込み中にエラーが発生しました:", error);
		});

	const mediaFilePath = `/news/info_list_media.json`;

		// 指定したファイルを取得(media)
		fetch(mediaFilePath)
		.then(response => {
			if (!response.ok) {
					throw new Error(`HTTPエラー! ステータス: ${response.status}`);
			}
			return response.json(); // JSONデータを返す
		})
		.then(data => {
			// テーブルのtbody要素を取得
			const mediaTableBody = document.querySelector("#media tbody");

			// JSONデータをループしてテーブルに行を追加
			data.forEach(item => {
				const row = document.createElement("tr");

				// 各カラムを生成してデータを挿入
				const dateCell = document.createElement("td");
				dateCell.textContent = item.date;

				const mediaCell = document.createElement("td");
				mediaCell.classList.add("media")
				mediaCell.textContent = item.media;

				const contentCell = document.createElement("td");
				const linkElement = document.createElement("a");
				linkElement.textContent = item.content; // リンクテキストに概要を使用
				linkElement.href = item.link; // `link`を<a>のhrefに設定
				linkElement.target = "_blank"; // 新しいタブで開くよう設定
				contentCell.appendChild(linkElement);

				// 行にカラムを追加
				row.appendChild(dateCell);
				row.appendChild(mediaCell);
				row.appendChild(contentCell);

				// 行をテーブルに追加
				mediaTableBody.appendChild(row);
			});
		})
		.catch(error => {
			console.error("ニュースデータの読み込み中にエラーが発生しました:", error);
		});
		
});

</script>
